<!doctype html>
<html>
  <head>
    <title>Illumination</title> 
    <script type="text/javascript">
      var flowcell_data = <%= @flowcell_data.to_json %>;
    </script>
    <script type="text/javascript" src="javascripts/jquery-1.6.2.min.js"></script>
    <script type="text/javascript" src="javascripts/d3.js"></script>
    <script type="text/javascript" src="javascripts/d3.time.js"></script>
    <script type="text/javascript" src="javascripts/flowcell.js"></script>
    <link href="stylesheets/style.css" type="text/css" rel="stylesheet"/>
    <link href="stylesheets/flowcell.css" type="text/css" rel="stylesheet"/>
    <%# <meta http-equiv="refresh" content="240"/>%>
  </head>
  <body>
    <div id="wrapper">
      <img id="logo" src="images/illumination.png"/>
      <div id="current_flowcell">
      <% if @current_flowcell[:events][-1]["message"] == "postrun done" %>
        <h1>Current Flowcell</h1>
        <h2>No Flowcell Running</h2>
      <% else %>
        <h1>Current Flowcell</h1>
        <h2><%= @current_flowcell[:id] %></h2>
        <h1>Status</h1>
        <h2><%= @current_flowcell[:events][-1]["message"] %></h2>
        <h1>Updated</h1>
        <h2><%= hours_since(@current_flowcell[:events][-1]["time"]) %> hours ago</h2>
      <% end %>
      </div>
      <br /><br />
      <h1>Previous Flowcells</h1>
      <div id="flowcells">
      </div>
    </div>
  </body>
</html>
